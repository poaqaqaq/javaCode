<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
    <!-- 这是默认配置信息,会自动加载在src下的此xml配置文件，properties和xml优先以.xml为主 -->
    <default-config>
        <!-- 连接四大参数配置 -->
        <property name="jdbcUrl">jdbc:mysql://localhost:3307/snarte?characterEncoding=UTF-8</property>
        <property name="driverClass">com.mysql.jdbc.Driver</property>
        <property name="user">root</property>
        <property name="password">mysql123</property>
        <!-- 池参数配置 -->
        <!-- 如果池中数据连接不够时一次增长多少个 -->
        <property name="acquireIncrement">3</property>
        <property name="initialPoolSize">10</property>
        <property name="minPoolSize">2</property>
        <property name="maxPoolSize">13</property>
    </default-config>
</c3p0-config>
